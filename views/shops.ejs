<%- include('partials/header') %>
<a href="/location" class="btn btn-dark" id="back-btn">Search another Product</a>
    <div class="container">
        <div class="row">
<%    foundShops.forEach(function(shop){    %>
    
        <div class="col-md-5 shop">
            <p class="shopName"> <%=shop.name%> </p>
            <p class="shopAddress">Address: <%=shop.address%> </p>
            <table>
                <tr>
                    <th>Products</th>
                    <th>Stock</th>
                </tr>
                <tbody>
<%                    var i = 0;    %>
<%                    for (i=0;i < shop.inventory.products.length; i++){    %>
        <tr>
            <td><%=shop.inventory.products[i].toLocaleUpperCase()%></td>
            <td><%=shop.inventory.stock[i]%></td>
        </tr>        
<%                    } %>
                
            </tbody>
        </table>
        </div>
    
<%    })    %>
</div>


</div>
        

<%- include('partials/footer') %>